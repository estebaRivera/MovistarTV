<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="100"
    android:versionName="1.00"
    package="com.smartboxtv.movistartv" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:requiresSmallestWidthDp="600"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:name="com.smartboxtv.movistartv.fragments.NUNCHEE"
        android:allowBackup="true"
        android:icon="@drawable/icon_oficial"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name="com.facebook.LoginActivity" />

        <activity
            android:name=".activities.LoginActivity"
            android:label="Movistar TV"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RecommendedActivity"
            android:label="@string/empty"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".activities.ProgramationActivity"
            android:icon="@drawable/transparente"
            android:label="@string/empty"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".activities.PreviewActivity"
            android:label="@string/empty"
            android:noHistory = "true"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".activities.SecondPreviewActivity"
            android:label="@string/empty"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".activities.TutorialActivity"
            android:label="@string/empty"
            android:noHistory = "true"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".activities.PlayerActivity"
            android:label="@string/empty"
            android:noHistory = "true"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/empty"
            android:noHistory = "true"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
    </application>

</manifest>
