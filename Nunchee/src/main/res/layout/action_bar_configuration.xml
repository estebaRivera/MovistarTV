<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/exit"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/configuration_arrow"
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/pestana_up3" />

    <RelativeLayout
        android:id="@+id/wrapper"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_wraper"
        android:layout_width="320dp"
        android:layout_height="245dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/configuracion_principal"
                android:text="Configuración"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/exit"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/close2"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contenedor_configuration"
            android:background="@drawable/shape_back_wrapper"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/config_auto_post"
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <TextView
                    android:id="@+id/auto_post_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:text="Autopost Facebook"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                     />

                <TextView
                    android:id="@+id/auto_post_secundario"
                    android:layout_below="@+id/auto_post_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Desactiva tu post en Facebook"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp"
                     />
                <ImageView
                    android:id="@+id/fb_active"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/fb_logo_blue_50_active"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/config_tutorial"
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <TextView
                    android:id="@+id/tutorial_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:text="Tutorial"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                     />
                <TextView
                    android:id="@+id/tutorial_secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tutorial_principal"
                    android:layout_marginLeft="5dp"
                    android:text="Información sobre el uso de Movistar TV"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp"
                     />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/go2"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/config_acerca_de"
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/acerca_de_principal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:text="Acerca de"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                     />
                <TextView
                    android:id="@+id/acerca_de_secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acerca_de_principal"
                    android:layout_marginLeft="5dp"
                    android:text="Información sobre Movistar TV"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp"
                     />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/go2"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/confif_terminos_y_condiciones"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/termino_principal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:text="Términos y Condiciones"
                    android:textColor="#55000000"
                    android:textSize="15sp"
                     />
                <TextView
                    android:id="@+id/termino_secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/termino_principal"
                    android:layout_marginLeft="5dp"
                    android:text="Información legal sobre Movistar TV"
                    android:textColor="#55000000"
                    android:textSize="12sp"
                     />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/go2"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>