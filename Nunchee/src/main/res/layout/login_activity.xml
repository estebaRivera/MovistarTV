<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity$PlaceholderFragment">


    <ImageView
        android:id="@+id/back2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/layer_trasparent"
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/medio"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="10dp"
        android:layout_height="1dp">

    </RelativeLayout>

    <Button
        android:id="@+id/logo"
        android:layout_width="370dp"
        android:layout_height="166dp"
        android:text="@string/empty"
        android:layout_centerVertical="true"
        android:background="@drawable/movistar_logo3"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-40dp" />

    <TextView
        android:id="@+id/initial_phrase_2"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ECECEC"
        android:layout_marginLeft="75dp"
        android:textSize="25dp"
        android:layout_marginTop="-20dp"
        android:maxWidth="400dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/initial_phrase"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ECECEC"
        android:layout_marginLeft="75dp"
        android:textSize="25dp"
        android:layout_marginTop="-20dp"
        android:maxWidth="400dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/login_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:background="@drawable/btn_ingreso"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />


    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textColor="@android:color/white"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="75dp"
        android:password="false"
        android:textSize="75sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textColor="@android:color/white"
        android:layout_below="@+id/logo"
        android:textSize="75sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textColor="@android:color/white"
        android:password="false"
        android:textSize="75sp"
        android:layout_alignBottom="@+id/p2"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:id="@+id/block_view"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/block_image"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="452dp"
            android:layout_marginBottom="303dp" />

    </RelativeLayout>

</RelativeLayout>