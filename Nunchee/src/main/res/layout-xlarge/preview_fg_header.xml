<?xml version="1.0" encoding="utf-8"?>

<!--- Cabeza-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preview_programa"
    android:background="#00000000"
    android:layout_height="300dp"
    android:layout_width="602dp">

    <RelativeLayout
        android:id="@+id/container_images"
        android:layout_width="match_parent"
        android:layout_height="185dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/preview_cabeza_fondo"
            android:background="@drawable/backdrop_placeholder"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/preview_cabeza_foto"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="84dp"
            android:layout_height="86dp"
            android:background="@drawable/favorito_fw"
            android:id="@+id/preview_image_favorito"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:id="@+id/preview_foto_canal" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:id="@+id/container_description"
        android:layout_below="@+id/container_images"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/preview_fondo_detalle"
            android:background="#D3D3D3"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/preview_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="22dp"
            android:text="@string/empty"
            android:textColor="#6E6E6E"
            android:textSize="16sp"
            android:layout_alignTop="@+id/preview_fondo_detalle"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preview_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="22dp"
            android:text="@string/empty"
            android:textColor="#6E6E6E"
            android:textSize="13sp"
            android:layout_below="@+id/preview_nombre"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/preview_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="12dp"
            android:text="@string/empty"
            android:textColor="#6E6E6E"
            android:textSize="11sp"
            android:layout_below="@+id/preview_hora"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_check_c"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="120dp">

        <Button
            android:id="@+id/second_preview_check_in_btn"
            android:text=" "
            android:background="#7AB700"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/second_preview_check_in"
            android:textColor="#FFFFFF"/>

        <RelativeLayout
            android:id="@+id/second_preview_check_in"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_check"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sintonizar_logo"
                />

            <TextView
                android:text="CheckIn"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/second_preview_check_in"
            android:background="@android:color/white"
            android:id="@+id/second_preview_foto_canal" />
    </RelativeLayout>

</RelativeLayout>
