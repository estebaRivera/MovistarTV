<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:background="#075A80"
    android:orientation="horizontal"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:layout_gravity="fill_horizontal"
    android:gravity="left"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <!-- Menú -->
    <ImageButton
        android:layout_marginLeft="0dp"
        android:src="@drawable/icon_new_back"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="75dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:id="@+id/item_back"/>


    <ImageView
        android:layout_height="30dp"
        android:layout_width="126dp"
        android:background="@drawable/movistartv_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/icon_search"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_toLeftOf="@+id/item_notificaciones"
        android:background="@drawable/buscar"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <!-- Notificaciones -->

    <ImageButton
        android:id="@+id/item_notificaciones"
        android:src="@drawable/campana"
        android:layout_toLeftOf="@+id/item_configuracion"
        android:background="?attr/actionBarItemBackground"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        />

    <!-- Configuración -->
    <ImageButton
        android:src="@drawable/settings"
        android:layout_alignParentRight="true"
        android:background="?attr/actionBarItemBackground"
        android:layout_centerVertical="true"
        android:layout_width="36dp"
        android:layout_marginLeft="5dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"
        android:id="@+id/item_configuracion"/>

</RelativeLayout>