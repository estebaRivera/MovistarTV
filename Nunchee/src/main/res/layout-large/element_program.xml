<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#0E3F60"
    android:clipChildren="false"
    android:id="@+id/container_program">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:clickable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            android:text=""
            android:layout_marginTop="26dp"
            android:layout_marginLeft="30dp"
            android:alpha="1"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text=""
            android:textSize="12sp"
            android:alpha="0.7"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="47dp"/>

        <!--ImageView
            android:id="@+id/margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/separador_canal"
            /-->

        <ImageView
            android:id="@+id/margin_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/separador_titulos_"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp" />


        <ImageView
            android:id="@+id/icon_now"
            android:visibility="gone"
            android:layout_width="18dp"
            android:layout_height="27dp"
            android:background="@drawable/actual_program"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="33dp"/>

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="62dp"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/txt_name_repeated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            android:text=" "
            android:layout_marginTop="26dp"
            android:layout_marginLeft="105dp"
            android:alpha="0.4"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

         <!--ImageView
             android:id="@+id/degrade_program"
             android:background="@drawable/bgprogra"
             android:layout_width="match_parent"
             android:layout_height="match_parent" /-->

</FrameLayout>