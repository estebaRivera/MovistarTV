<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <TextView
        android:id="@+id/txt_nombre_notification"
        android:text="Programa"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:alpha="0.6"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_fecha_notification"
        android:text="12:00 -10-10-2019"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:alpha="0.6"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="108dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_notifications_icon"
        android:background="@drawable/timer_icon"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="85dp"
        android:layout_width="15dp"
        android:layout_height="15dp"/>

    <ImageView
        android:id="@+id/img_notifications_back"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


    <ImageView
        android:id="@+id/img_notifications"
        android:background="@drawable/feed_small_placeholder"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="11dp"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

</FrameLayout>